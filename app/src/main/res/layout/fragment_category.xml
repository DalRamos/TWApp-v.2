<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c594fe"
    tools:context=".FTCard1Fragment">

    <ImageView
        android:id="@+id/ft1back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tabpicone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_box"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/jost_medium"
            android:text="Dr. Ronald Wayne"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/jost"
            android:text="Arithmetic"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/baseline_location_on_24"
            android:fontFamily="@font/jost_medium"
            android:text="Sample Location, Location City, Sample Location"
            android:textColor="#c594fe"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/jost_medium"
            android:text="Biography"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/jost"
            android:text="John Smith has been teaching mathematics for over 10 years and is passionate about helping students understand and excel in the subject. He holds a Bachelor's degree in Mathematics and a Master's in Education. In his free time, he enjoys solving complex math problems and coaching the school's math club."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/appointmentButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Make an appoinment"
            android:backgroundTint="#c594fe"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>
